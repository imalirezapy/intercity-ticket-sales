{
    "openapi": "3.0.0",
    "info": {
        "title": "intercity ticket sales restful api",
        "version": "1.0"
    },
    "paths": {
        "/api/v1/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Login user with email and password",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "example@gmail.com"
                                    },
                                    "password": {
                                        "description": "Must be greater than 6",
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful login"
                    },
                    "422": {
                        "description": "Unprocessable - Invalid credentials"
                    }
                }
            }
        },
        "/api/v1/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "register user with email and password",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "first_name": {
                                        "description": "first name",
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "last_name": {
                                        "description": "last name",
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "example@gmail.com"
                                    },
                                    "password": {
                                        "description": "Must be greater than 6",
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful register new user"
                    },
                    "422": {
                        "description": "Unprocessable - Invalid credentials"
                    }
                }
            }
        }
    }
}